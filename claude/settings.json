{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "model": "claude-sonnet-4-5-20250929",
  "outputStyle": "Mentor",
  "language": "english",
  "alwaysThinkingEnabled": true,

  "permissions": {
    "defaultMode": "default",

    "allow": [
      "Bash(npm run lint*)",
      "Bash(npm run test*)",
      "Bash(npm run build*)",
      "Bash(npx tsc --noEmit*)",
      "Bash(npx prettier --write*)",
      "Bash(npx eslint --fix*)",

      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git branch*)",
      "Bash(git stash*)",
      "Bash(git add:*)",

      "Bash(npm ls*)",
      "Bash(npm outdated*)",
      "Bash(npm info*)",

      "Read(./package*.json)",
      "Read(./tsconfig*.json)",
      "Read(./.eslintrc*)",
      "Read(./.prettierrc*)",
      "Read(./CLAUDE.md)",
      "Read(./README*)",
      "Read(./docs/**)",

      "Edit(./src/**)",
      "Edit(./lib/**)",
      "Edit(./tests/**)",
      "Edit(./docs/**)",

      "Read(./.claude/skills/**)",
      "Read(./.claude/agents/**)",
      "Read(./.claude/commands/**)",
      "Write(./docs/brainstorm/**)",
      "Write(./docs/specs/**)",
      "Write(./docs/tasks/**)",
      "Write(./docs/PRD.md)",
      "Write(./docs/ARCHITECTURE.md)",

      "Glob",
      "Grep"
    ],

    "ask": [
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git tag:*)",

      "Bash(npm install*)",
      "Bash(npm uninstall*)",
      "Bash(npm publish*)",

      "Bash(gh pr create:*)",
      "Bash(gh issue create:*)",

      "Edit(./package.json)",
      "Edit(./tsconfig*.json)",
      "Edit(./.github/**)",

      "Task"
    ],

    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./.env.local)",
      "Read(./.env.production)",
      "Read(./secrets/**)",
      "Read(./.secrets/**)",
      "Read(**/.ssh/**)",
      "Read(**/.aws/**)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.p12)",
      "Read(**/*credentials*)",
      "Read(**/GoogleService-Info.plist)",
      "Read(**/google-services.json)",

      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(nc:*)",
      "Bash(scp:*)",
      "Bash(rsync:*)",
      "Bash(ssh:*)",

      "Bash(rm -rf /*)",
      "Bash(rm -rf /)",
      "Bash(sudo:*)",
      "Bash(chmod 777*)",

      "Edit(**/package-lock.json)",
      "Edit(**/yarn.lock)",
      "Edit(**/Podfile.lock)",
      "Edit(**/Cargo.lock)",
      "Edit(**/Gemfile.lock)",

      "Edit(**/node_modules/**)",
      "Edit(**/dist/**)",
      "Edit(**/build/**)",
      "Edit(**/.next/**)",
      "Edit(**/target/**)",

      "Edit(./.git/**)",

      "WebFetch"
    ],

    "additionalDirectories": []
  },

  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true,
    "excludedCommands": ["git", "docker", "gh"],
    "allowUnsandboxedCommands": false,
    "network": {
      "allowUnixSockets": ["/var/run/docker.sock"],
      "allowLocalBinding": true
    }
  },

  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-start.sh",
            "timeout": 10
          }
        ]
      }
    ],

    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/file-protection.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[PRE-BASH] $(date '+%Y-%m-%d %H:%M:%S')\" >> .claude/audit.log",
            "timeout": 3
          }
        ]
      }
    ],

    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/post-edit.sh",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[POST-BASH] $(date '+%Y-%m-%d %H:%M:%S') exit=$TOOL_EXIT_CODE\" >> .claude/audit.log",
            "timeout": 3
          }
        ]
      }
    ],

    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[FAILURE] $(date '+%Y-%m-%d %H:%M:%S') $TOOL_NAME\" >> .claude/errors.log",
            "timeout": 3
          }
        ]
      }
    ],

    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[STOP] $(date '+%Y-%m-%d %H:%M:%S')\" >> .claude/audit.log",
            "timeout": 3
          }
        ]
      }
    ],

    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[PROMPT] $(date '+%Y-%m-%d %H:%M:%S')\" >> .claude/audit.log",
            "timeout": 3
          }
        ]
      }
    ],

    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[SUBAGENT-START] $(date '+%Y-%m-%d %H:%M:%S')\" >> .claude/audit.log",
            "timeout": 3
          }
        ]
      }
    ],

    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[SUBAGENT-STOP] $(date '+%Y-%m-%d %H:%M:%S')\" >> .claude/audit.log",
            "timeout": 3
          }
        ]
      }
    ],

    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo \"[COMPACT] $(date '+%Y-%m-%d %H:%M:%S')\" >> .claude/audit.log",
            "timeout": 3
          }
        ]
      }
    ],

    "Setup": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "chmod +x .claude/hooks/*.sh 2>/dev/null; echo 'âœ… Hooks ready' >&2",
            "timeout": 30
          }
        ]
      }
    ]
  },

  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "BASH_DEFAULT_TIMEOUT_MS": "30000",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "16384",
    "CLAUDE_CODE_MAX_TURNS": "50"
  },

  "spinnerTipsEnabled": true,
  "terminalProgressBarEnabled": true,
  "showTurnDuration": true,

  "attribution": {
    "commit": "Co-authored-by: Claude <noreply@anthropic.com>",
    "pr": "ğŸ¤– This PR was crafted with assistance from Claude Code"
  },

  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": ["memory"],
  "disabledMcpjsonServers": ["filesystem"],

  "enabledPlugins": {},

  "statusLine": {
    "type": "command",
    "command": "bash .claude/hooks/statusline.sh 2>/dev/null || echo 'â‡ '$(git branch --show-current 2>/dev/null || echo 'detached')",
    "padding": 2
  },

  "autoUpdatesChannel": "stable",
  "cleanupPeriodDays": 30,
  "respectGitignore": true,
  "plansDirectory": ".claude/plans",

  "companyAnnouncements": [
    "ğŸ“‹ Use /brainstorm to start a structured ideation session",
    "ğŸ“ PRD workflow: /brainstorm â†’ /create-prd â†’ /create-architecture â†’ /generate-tasks",
    "ğŸ”’ Secrets and .env files are protected â€” never hardcode credentials"
  ]
}
