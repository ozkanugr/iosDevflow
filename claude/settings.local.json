{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",

  "model": "claude-opus-4-5-20251101",
  "alwaysThinkingEnabled": true,

  "permissions": {
    "allow": [
      "Bash(npm run dev)",
      "Bash(npm run dev:*)",
      "Bash(node --inspect*)",
      "Bash(./scripts/local-*.sh)"
    ]
  },

  "env": {
    "ANTHROPIC_SMALL_FAST_MODEL": "claude-haiku-4-5-20251001",
    "DEBUG": "app:*",
    "LOG_LEVEL": "debug"
  }
}
